{%- import "components/ui.njk" as ui with context -%}

<header class="" role="banner">
  <div class="container">
    <nav  role="navigation">
      <ul class="Nav flex flex-wrap justify-content-center list-reset">
        {%- for link in navigation -%}
          {%- if link.href == '/' -%}
            <li class="Nav-item Nav-item--home">
              {{ ui.navLink(link) }}
            </li>
          {%- else -%}
            <li class="Nav-item">
              {{ ui.navLink(link) }}
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </nav>
  </div>
</header>
