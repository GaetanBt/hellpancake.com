{% extends "layouts/base.twig" %}

{% block content %}
  <h1>{{ page.title }}</h1>

  <p class="m-0">
    {{ t("note.publishedOn") | capitalize }} <time datetime="{{ page.published_on.toDate }}">{{ page.published_on | localizeDateField }}</time> {{ t("by") }} {{ author.name }}.
    {% if page.updated_on.isNotEmpty %}
      {{ t("note.lastUpdatedOn") | capitalize }} <time datetime="{{ page.updated_on.toDate }}">{{ page.updated_on | localizeDateField }}</time>.
    {% endif %}
  </p>

  {% for block in page.text.toBlocks %}
    {{ block.toHtml | raw }}
  {% endfor %}
{% endblock %}
